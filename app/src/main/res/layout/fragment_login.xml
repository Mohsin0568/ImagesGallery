<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gallery.images.com.imagesgallery.LoginFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:id="@+id/text_relative"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To Favorito"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:id="@+id/welcome_text"
            android:textSize="30sp"/>

        <TextView
            android:text="@string/signInText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_below="@id/welcome_text"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_relative"
        android:layout_marginTop="60dp">

        <com.google.android.gms.common.SignInButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:id="@+id/google_signin_button"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/google_signin_button"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="30dp">

            <com.facebook.login.widget.LoginButton
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/facebook_signin_button"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
            />
        </RelativeLayout>

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/google_signin_button"
            android:text="Skip Sign In"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:paddingRight="20sp"
            android:textColor="@color/teal"
            android:id="@+id/skip_signin_text"/>-->
    </RelativeLayout>


</RelativeLayout>
